<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
>
<style>
  .stars-outer {
    display: inline-block;
    position: relative;
    font-family: FontAwesome;
  }
  .stars-outer::before {
    content: '\f006 \f006 \f006 \f006 \f006';
  }
  .stars-inner {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    overflow: hidden;
    width: 0;
  }
  .stars-inner::before {
    content: '\f005 \f005 \f005 \f005 \f005' !important;
    color: #f8ce0b !important;
  }
  .attribution {
    font-size: 12px;
    color: #444;
    text-decoration: none;
    text-align: center;
    position: fixed;
    right: 10px;
    bottom: 10px;
    z-index: -1;
  }
  .attribution:hover {
    color: #1fa67a;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const ratings{{ id }} = {{reviewValue}}
    const starTotal{{ id }} = 5;
    // Calculate the percentage of stars to be filled
    const starPercentage{{ id }} = (ratings{{ id }} / starTotal{{ id }}) * 100;
    const starPercentageRounded{{ id }} = `${Math.round(starPercentage{{ id }} / 10) * 10}%`;
    // Update the width of the stars-inner element
    const starsInner = document.querySelector(`#reviews-{{ id }} .stars-inner`);
    if (starsInner) {
      starsInner.style.width = starPercentageRounded{{ id }};
    } else {
      console.error("The element with the class 'stars-inner' was not found.");
    }
  });
</script>
